@*@model ECommerce_Base.Models.CartItemDto*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ECommerceLayout.cshtml";
}

<div class="bg-light" style="height:150px;">
    <h3 class="text-center" style="font-size:75px">Advertisement Board</h3>
</div>
<div class="container mt-5">
    <table class="table" id="CartsTable">
        <thead>
            <tr>
                <th scope="col">Products</th>
                <th></th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <div class="row">
        <div class="mt-4 col-6">
            <a href="/Product/Index" type="button" class="btn btn-warning">Continue to Shopping</a>
        </div>
        <div class="mt-4 p-3 col-6 bg-light">
            <h5>Cart Total</h5>
            <div class="d-flex justify-content-between py-3">
                <p>Total</p>
                <p id="CartTotalPrice" class="pe-5"></p>
            </div>
            <a href="/Order/Index" type="button" class="btn btn-success">Proceed to Checkout</a>
        </div>
    </div>
    
</div>


