@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mx-auto" style="width:75%">
    <br />
    <h2>Users Table</h2>
    <br />

    <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-success UserSaveModal" data-bs-toggle="modal" data-bs-target="#exampleModal3" id="UserSaveModal" name="AddCategory">
            Add New User
        </button>
    </div>

    <br />
    <table class="table table-striped" id="UsersTable">
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>E Mail</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Password</th>
                <th>Address</th>
                <th>Postal Code</th>
                <th>City</th>
                <th>Country</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
