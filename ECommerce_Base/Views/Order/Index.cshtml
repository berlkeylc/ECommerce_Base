
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ECommerceLayout.cshtml";
}
<div class="bg-light" style="height:150px;">
    <h3 class="text-center" style="font-size:75px">Advertisement Board</h3>
</div>
<div class="container mt-4">
    <form method="post" id="CheckOutSaveForm">
        <div class="row">
            <div class="col-8">
                <div class="row" id="CheckOutInfos">
                    <br /> <br />
                    <div class="col-6 my-3" hidden>
                        <label for="UserID" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="UserID" name="UserID">
                    </div>
                    <br /> <br />
                    <div class="col-6 my-3">
                        <label for="UserFirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="UserFirstName" name="UserFirstName">
                    </div>
                    <br /> <br />
                    <div class="col-6 my-3">
                        <label for="UserLastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="UserLastName" name="UserLastName">
                    </div>
                    <br /> <br />
                    <div class="col-12 my-3">
                        <label for="UserCountry" class="form-label">Country</label>
                        <input type="text" class="form-control" id="UserCountry" name="UserCountry">
                    </div>
                    <br /> <br />
                    <div class="col-12 my-3">
                        <label for="UserCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="UserCity" name="UserCity">
                    </div>
                    <br /> <br />
                    <div class="col-12 my-3">
                        <label for="UserAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="UserAddress" name="UserAddress">
                    </div>
                    <div class="col-12 my-3">
                        <label for="UserPostalCode" class="form-label">Postal Code</label>
                        <input type="text" class="form-control" id="UserPostalCode" name="UserPostalCode">
                    </div>
                    <br /> <br />
                    <div class="col-6 my-3">
                        <label for="UserPhone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="UserPhone" name="UserPhone">
                    </div>
                    <div class="col-6 my-3">
                        <label for="UserEmail" class="form-label">E Mail</label>
                        <input type="text" class="form-control" id="UserEmail" name="UserEmail">
                    </div>
                </div>
            </div>
            <div class="col-3 bg-light my-3 ms-5">
                <h4 class="">Your Order</h4>
                <hr />
                <div class="d-flex justify-content-between">
                    <p class="px-2">Products</p>
                    <p class="px-5">Total</p>
                </div>
                <ul id="CartCheckOut" style="list-style-type: none;">
                </ul>

                <button type="submit" class="btn btn-success">Place Order</button>
            </div>
        </div>
    </form>
</div>


