@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Update Category Page</h2>
@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Category Id")
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Category Name")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        @Html.Label("Category Description")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br /> <br />
        @Html.Label("Category Status")
        @Html.RadioButtonFor(x => x.CategoryStatus, "True") @Html.Label("True")
        @Html.RadioButtonFor(x => x.CategoryStatus, "False") @Html.Label("False")
        <button class="btn btn-succes">Güncelle</button>
    </div>
}

